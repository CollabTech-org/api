generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  category    String[]
  description String
  stock       Float
  price       Float
  sale_price  Float
  tags        String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt

  @@map("products")
}
